{
  "name": "printer-app",
  "version": "1.0.0",
  "description": "Electron wrapper for Flask 3D printer control",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "start-flask": "cd .. && python app.py",
    "dev": "concurrently \"npm run start-flask\" \"npm run start\"",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "postinstall": "electron-builder install-app-deps",
    "build-flask": "cd .. && pip install pyinstaller && pyinstaller --onefile --windowed app.py"
  },
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "electron": "^29.0.0",
    "concurrently": "^8.2.2"
  },
  "devDependencies": {
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.yourdomain.printerapp",
    "productName": "3D Printer Controller",
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "../assets/icon.ico",
      "publisherName": "Your Name"
    },
    "extraResources": [
      {
        "from": "../dist/app.exe",
        "to": "app.exe",
        "filter": ["**/*"]
      },
      {
        "from": "../static",
        "to": "static",
        "filter": ["**/*"]
      },
      {
        "from": "../templates",
        "to": "templates",
        "filter": ["**/*"]
      }
    ],
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "runAfterFinish": true
    }
  }
}